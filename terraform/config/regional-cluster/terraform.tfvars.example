# =============================================================================
# Regional Cluster Infrastructure Configuration Template
# =============================================================================
# This file contains the configuration template for the regional cluster.
#
# IMPORTANT: Never commit terraform.tfvars to git - it's in .gitignore for security

# Tagging Configuration
# Application code for resource tagging and cost allocation
app_code      = "APP001"

# Service phase (development, staging, production)
service_phase = "development"

# Cost center identifier for billing and cost allocation
cost_center   = "123"

# =============================================================================
# ArgoCD Bootstrap Configuration
# =============================================================================
# Git repository configuration for cluster bootstrap and ongoing management

# Git repository URL containing cluster configuration
repository_url    = "https://github.com/openshift-online/rosa-regional-platform"

# Git branch to use for cluster configuration (defaults to "main" if not specified)
repository_branch = "main"

# =============================================================================
# Bastion Configuration (Optional)
# =============================================================================
# Enable ECS Fargate bastion for break-glass/development access to the cluster.
# When enabled, creates a dedicated ECS cluster and task definition for bastion access.
# See terraform/modules/bastion/README.md for usage instructions.

# Enable bastion access (defaults to false)
# enable_bastion = true

# =============================================================================
# API Gateway Configuration
# =============================================================================
# Configuration for the API Gateway that exposes the regional platform API.

# AWS region name (required for API Gateway URL construction)
region_name = "test"

# Additional AWS account IDs allowed to access the Platform API (optional)
# The current account is automatically included - only specify additional accounts here
# Multiple accounts are comma-separated (use backslash escaping for Helm compatibility):
# api_additional_allowed_accounts = "111111111111\,222222222222\,333333333333"
# api_additional_allowed_accounts = "111111111111"  # Single additional account
# api_additional_allowed_accounts = ""              # No additional accounts (default)

# Maestro Infrastructure Configuration

# =============================================================================
# Configuration for Maestro MQTT-based orchestration between regional and
# management clusters

# Database configuration
maestro_db_instance_class = "db.t4g.micro"  # Use db.t4g.small or larger for production

# High availability and protection (recommended for production)
maestro_db_multi_az           = false  # Set to true for production
maestro_db_deletion_protection = false  # Set to true for production

# MQTT topic prefix for Maestro communication
maestro_mqtt_topic_prefix = "maestro/consumers"
