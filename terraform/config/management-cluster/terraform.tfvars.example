# =============================================================================
# Management Cluster Infrastructure Configuration Template
# =============================================================================
# This file contains the configuration template for the management cluster.
#
# IMPORTANT: Never commit terraform.tfvars to git - it's in .gitignore for security

# Tagging Configuration
# Application code for resource tagging and cost allocation
app_code      = "APP001"

# Service phase (development, staging, production)
service_phase = "development"

# Cost center identifier for billing and cost allocation
cost_center   = "123"

# =============================================================================
# ArgoCD Bootstrap Configuration
# =============================================================================
# Git repository configuration for cluster bootstrap and ongoing management

# Git repository URL containing cluster configuration
repository_url    = "https://github.com/openshift-online/rosa-regional-platform"

# Git branch to use for cluster configuration (defaults to "main" if not specified)
repository_branch = "main"

# =============================================================================
# Bastion Configuration (Optional)
# =============================================================================
# Enable ECS Fargate bastion for break-glass/development access to the cluster.
# When enabled, creates a dedicated ECS cluster and task definition for bastion access.
# See terraform/modules/bastion/README.md for usage instructions.

# Enable bastion access (defaults to false)
# enable_bastion = true

# =============================================================================
# Maestro Agent Configuration (Optional)
# =============================================================================

# Logical cluster ID - MUST match the ID used in regional cluster's management_cluster_ids
# Example: "management-01", "management-02", etc.
# This is used as the Maestro consumer name and for looking up pre-provisioned resources
cluster_id = "management-01"

# Enable Maestro Agent deployment (defaults to false)
maestro_enabled = false
